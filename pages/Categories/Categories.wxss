/* ===== Root Container ===== */
.categories-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f9fafc;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto;
}

/* ===== Header ===== */
.glass-header {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05);
  padding: 20rpx;
  z-index: 10;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 50rpx;
  padding: 10rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.search-icon {
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  padding: 6rpx;
  color: #333;
}

.placeholder {
  color: #aaa;
}

.deals-text {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #ff4b4b;
}

.filter-btn {
  margin-left: 20rpx;
  border-radius: 50%;
  background: #fff1f1;
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-btn-hover {
  transform: scale(0.95);
}

/* ===== Main Layout ===== */
.categories-container {
  display: flex;
  flex: 1;
  overflow: hidden;
}

/* Sidebar */
.sidebar {
  width: 180rpx;
  background: #f5f6f8;
  border-right: 1px solid #eee;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.2s ease;
}

.category-item.active {
  background: #fff;
  color: #ff4b4b;
  font-weight: bold;
  border-left: 6rpx solid #ff4b4b;
}

.category-item .icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 10rpx;
}

/* Products Area */
.products {
  flex: 1;
  background: #fff;
  padding: 20rpx;
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.category-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.product-count {
  font-size: 26rpx;
  color: #999;
}

/* Product Grid */
.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 20rpx;
}

.product-card {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 18rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
}

.image-wrapper {
  position: relative;
  width: 100%;
  height: 260rpx;
}

.product-image {
  width: 100%;
  height: 100%;
}

.price-badge {
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
  background: rgba(255, 75, 75, 0.9);
  color: #fff;
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.discount-badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background: #ffba08;
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.product-info {
  padding: 16rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #222;
}

.product-desc {
  font-size: 24rpx;
  color: #777;
  margin: 6rpx 0;
}

/* Rating */
.rating {
  display: flex;
  align-items: center;
  margin: 6rpx 0;
}

.star-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

.rating-text {
  font-size: 22rpx;
  color: #555;
  margin-left: 8rpx;
}

/* Footer */
.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.original-price {
  font-size: 24rpx;
  text-decoration: line-through;
  color: #aaa;
}

.btn-add-cart {
  font-size: 24rpx;
  background: #ff4b4b;
  color: #fff;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #666;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 30rpx;
  font-weight: bold;
}

.empty-subtext {
  font-size: 24rpx;
  color: #999;
}

/* ===== Modal ===== */
.modal {
  position: fixed;
  top: 0; left: 0;
  right: 0; bottom: 0;
  display: none;
  justify-content: flex-end;
}

.modal.show {
  display: flex;
}

.modal-overlay {
  flex: 1;
  background: rgba(0,0,0,0.5);
}

.modal-content {
  width: 80%;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  padding: 20rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 30rpx;
  font-weight: bold;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
}

.filter-section {
  margin: 20rpx 0;
}

.section-title {
  font-size: 26rpx;
  margin-bottom: 10rpx;
  font-weight: 600;
}

.price-range {
  font-size: 24rpx;
  color: #444;
}

.radio-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.modal-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.btn-reset {
  flex: 1;
  margin-right: 20rpx;
  background: #f1f1f1;
  border-radius: 30rpx;
  padding: 16rpx 0;
}

.btn-apply {
  flex: 1;
  background: #ff4b4b;
  color: #fff;
  border-radius: 30rpx;
  padding: 16rpx 0;
}

/* ===== Loading ===== */
.loading-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(255,255,255,0.8);
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-icon {
  width: 100rpx;
  height: 100rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #444;
  margin-top: 10rpx;
}
